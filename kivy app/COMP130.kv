#:kivy 1.0.9

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 75, 75
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<PongGame>:
    ball: pong_ball
    player1: player_left
    #player2: player_right


    Label:
        font_size: 70
        center_x: root.width / 2
        top: root.top
        text: str(root.player1.score)


    PongBall:
        id: pong_ball
        center_x: 10
        center_y: 10

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

