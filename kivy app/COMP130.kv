#:kivy 1.0.9

<Trucks>:
    size: 100, 50
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PlayerObject>:
    size: 50, 50
    canvas:
        Ellipse:
            pos:self.pos
            size:self.size

<TheGame>:
    ball: the_truck
    player1: player


    Label:
        font_size: 70
        center_x: root.width / 2
        top: root.top
        text: str(root.player1.score)

    Trucks:
        id: the_truck
        center_x: 100
        center_y: 100

    PlayerObject:
        id: player
        # x: root.x
        y: root.y
        # center_y: root.center_y
        center_x: root.center_x


