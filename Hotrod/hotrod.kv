#:kivy 1.9.0

<HotrodGame>
    player: player_beetle_id

    PlayerBeetle:
        id: player_beetle_id

    Label:
        font_size: 70
        center_x: root.width / 10
        top: root.top
        text: "Oh no"

<PlayerBeetle>
    size: 25, 25
    canvas:
        Color:
            rgb: self.color
        Ellipse:
            pos: self.pos
            size: self.size

<Wall>:
    canvas:
        Color:
            rgb: self.color
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.origin
        Rectangle:
            pos: self.pos
            size: self.size
        PopMatrix

