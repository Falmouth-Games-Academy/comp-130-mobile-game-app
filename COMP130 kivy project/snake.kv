#:kivy 1.9.0

TheScreenManager:
    #transition: FadeTransition()
    Menu:
    snakeGame:
    HighScoreMenu:

<Menu>:
    name: "Menu"

    BoxLayout:
        orientation: 'vertical'

        Button:
            text: "play"
            on_release: app.root.current = "snakeGame"

        Button:
            text: "HighScore"
            on_release: app.root.current = "HighScoreMenu"

        Button:
            on_press:root.button_press()

        Label:
            text: root.snakeplayer

        Label:
            #pos:
            text: "Player Name Below"
            multiline: False

        TextInput:
            text: "enter text"


<snakeGame>:
    name:"snakeGame"
    Monster:

    Label:
        font_size: 30
        pos: -370, 270
        text: "0"


<HighScoreMenu>:
    name:"HighScoreMenu"

<Monster>:
    size_hint: None,None
    pos:440, 350
    canvas:
        Rectangle:
            pos:root.x - (self.width/2),root.y - (self.height/2)
            size: 50, 50

<Trash>:
