#:kivy 1.9.0

TheScreenManager:
    #transition: FadeTransition()
    Menu:
    snakeGame:
    HighScoreMenu:

<Menu>:
    name: "Menu"

    BoxLayout:
        orientation: 'vertical'

        Button:
            text: "play"
            on_release: app.root.current = "snakeGame"

        Button:
            text: "HighScore"
            on_release: app.root.current = "HighScoreMenu"

        Label:
            #pos:
            text: "Player Name Below"
            multiline: False

        TextInput:
            text: "enter text"


<snakeGame>:
    name:"snakeGame"
    Monster:

    Label:
        font_size: 30
        pos: -370, 270
        text: "0"


<HighScoreMenu>:
    name:"HighScoreMenu"

<Monster>:
    size_hint: None_None
    #size: 50, 50
    Canvas:
        color:
            rgb: 0, 1, 0
        Rectangle:
            pos:root.x - (self.width/2),root.y - (self.height/2)
            size: root.width, root.height