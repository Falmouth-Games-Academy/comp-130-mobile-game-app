#:kivy 1.0.9


<Game>:
    name: "Game"
    FloatLayout:


        Button:
            size_hint: 0.2, 0.1
            pos_hint: {"x": 0, "top": 1}
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'StartScreen'

            text: "Back"
        Ship:
        #Ammo:




<Ship>:
    Button:
        text: 'up'
        size_hint: None, None
        size: 50,20
        #pos_hint: {'center_x': .5, 'center_y': .5}
        pos: (root.x - (self.width/2)),(root.y - (self.height/2))
        canvas.before:
            PushMatrix
            Rotate:
                angle: root.degrees
                origin: self.center
        canvas.after:
           # Rectangle:
           #     Color:
           #         rgb: 1, 1, 0
            PopMatrix
    Label:
        pos: 500, 500
        text: "Angle: " + str(root.degrees)


<Asteroid_movement>:
    size_hint:None,None

